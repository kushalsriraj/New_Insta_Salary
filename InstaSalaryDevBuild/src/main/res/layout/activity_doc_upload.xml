                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Bankstatement.pdf"
                android:textSize="10dp"
                android:textColor="#000"/>

        </LinearLayout>

    </LinearLayout>

    <TextView

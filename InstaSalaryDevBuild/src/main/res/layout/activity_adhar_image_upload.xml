<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.AdharImageUpload">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/adhar_front_image_Card"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="Capture Adhar Front Image"
                android:textColor="#000"
                android:textSize="18dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/adhar_front_image_Card"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:elevation="20dp"
                android:visibility="visible"
                app:cardCornerRadius="20dp">

                <androidx.camera.view.PreviewView
                    android:id="@+id/previewViewAdhar_front"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/preview_area"
                    android:importantForAccessibility="no" />

                <ImageView
                    android:id="@+id/adhar_front_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/capture_image_adhar_front"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/adhar_front_image_Card"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:src="@drawable/capturecam" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/circlecam" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_bottom_adhar_frontupload"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/adhar_front_image_Card"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/layout_cancel_adhar_front"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_cancel"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cancel" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_correct_adhar_front"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_correct"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/correct" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/AdharFrontImagesubmit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="#36000000">

        <TextView
            android:id="@+id/bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="Upload Adhar Back.."
            android:textColor="#fff"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:src="@drawable/next" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/loader_adharupload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <com.crystal.crystalpreloaders.widgets.CrystalPreloader
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="15dp"
            app:crs_pl_bg_color="#fff"
            app:crs_pl_fg_color="@color/instapink"
            app:crs_pl_size="very_small"
            app:crs_pl_style="skype_balls" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>